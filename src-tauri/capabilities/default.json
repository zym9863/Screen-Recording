{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Screen recording application capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:tray:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "global-shortcut:default",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-is-registered",
    "store:default",
    "store:allow-set",
    "store:allow-get",
    "store:allow-delete",
    "store:allow-clear",
    "store:allow-has",
    "store:allow-entries",
    "store:allow-keys",
    "store:allow-values",
    "store:allow-length",
    "store:allow-load",
    "store:allow-save",
    "opener:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$VIDEO/*"
        },
        {
          "path": "$VIDEO/**"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}
